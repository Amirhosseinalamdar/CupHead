<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.SettingsController"
            prefHeight="900.0" prefWidth="1600.0">
    <center>
        <VBox alignment="CENTER" spacing="30">

        <HBox alignment="CENTER" spacing="30" prefHeight="100">
            <Text text="hardness:" style="-fx-font-size: 40"/>
            <Button text="easy" prefWidth="100" prefHeight="50" onMouseClicked="#setOnEasy"/>
            <Button text="normal" prefWidth="100" prefHeight="50" onMouseClicked="#setOnNormal"/>
            <Button text="hard" prefWidth="100" prefHeight="50" onMouseClicked="#setOnHard"/>
            <Button text="devil mode" prefWidth="100" prefHeight="50" onMouseClicked="#setToDevilMode" />
        </HBox>
            <Button text="dark" prefWidth="200" prefHeight="70" onMouseClicked="#dark" fx:id="blackButton"/>
            <Button text="mute" prefWidth="200" prefHeight="70" onMouseClicked="#mute" fx:id="muteButton"/>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_LEFT" style="-fx-padding: 5;">
            <Button text="back" prefHeight="50" prefWidth="100" onMouseClicked="#back"/>
        </HBox>
    </bottom>

</BorderPane>
